
<div class="container mx-auto px-4 py-8">
  <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
    <%# Product Image %>
    <div class="product-image">
  <img src="https://image1.superdry.com/static/images/optimised/zoom/upload9223368955666516917.jpg" alt="<%= @product.name %>" class="w-full rounded-lg shadow-lg">
</div>

    <%# Product Details %>
    <div class="product-details">
      <h1 class="text-3xl font-bold mb-4"><%= @product.name %></h1>
      <p class="text-gray-600 mb-6"><%= @product.description %></p>

      <%# Price %>
      <div class="price mb-6">
        <span class="text-2xl font-bold">$<%= @product.base_price %></span>
      </div>

      <%# Color Selection %>
      <div class="color-selection mb-6">
        <h3 class="text-lg font-semibold mb-2">Color</h3>
        <div class="flex gap-2">
          <% @colors.each do |color| %>
            <button
              class="w-10 h-10 rounded-full border-2 border-gray-300 focus:outline-none focus:ring-2 focus:ring-offset-2"
              style="background-color: <%= color.downcase %>"
              data-color="<%= color %>">
            </button>
          <% end %>
        </div>
      </div>

      <%# Size Selection %>
      <div class="size-selection mb-6">
        <h3 class="text-lg font-semibold mb-2">Size</h3>
        <div class="flex gap-2">
          <% @sizes.each do |size| %>
            <button
              class="px-4 py-2 border-2 border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-offset-2"
              data-size="<%= size %>">
              <%= size %>
            </button>
          <% end %>
        </div>
      </div>

      <%# Add to Cart Button %>
      <button class="w-full bg-blue-600 text-white py-3 px-6 rounded-lg hover:bg-blue-700 transition duration-200">
        Add to Cart
      </button>

      <%# Stock Status %>
      <p class="text-sm text-gray-500 mt-4">
        In Stock: <%= @variants.dig(@colors.first, @sizes.first)&.stock || 0 %>
      </p>
    </div>
  </div>
</div>
